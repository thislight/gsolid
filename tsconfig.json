{
    "files": [
        "src/index.ts",
        "src/jsx-runtime.ts",
        "src/widget.tsx",
        "src/fetch.ts",
        "src/web-ponyfill.ts",
        "src/reactive.ts",
        "src/store.ts",
        "src/storage.ts",
        "src/gobject.ts",
        "src/package.ts"
    ],
    "include": ["src/gtk4/*.tsx", "src/gtk4/*.ts"],
    "exclude": ["node_modules/"],
    "compilerOptions": {
        "emitDeclarationOnly": true,
        "declaration": true,
        "target": "esnext",
        "newLine": "LF",
        "module": "ES2022",
        "moduleResolution": "Bundler",
        "strict": true,
        "jsx": "preserve",
        "outDir": "types",
        "isolatedModules": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "lib": [
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2018",
            "ES2019",
            "ES2020",
            "ES2021",
            "ES2022",
            "ESNext",
            "DOM", // This type lib is required to build, part of solid-js includes links to dom.d.ts
        ],
        "types": [
            "@girs/gjs",
            "@girs/gtk-4.0",
            "@girs/soup-3.0",
            "@girs/girepository-2.0",
        ],
        "jsxImportSource": "gsolid",
        "esModuleInterop": true,
        "rootDir": "./src"
    },
}
